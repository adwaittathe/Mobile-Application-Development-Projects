<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_news"
        android:layout_width="109dp"
        android:layout_height="110dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="9dp"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="3dp"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/txt_news_title"
        android:layout_width="253dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/img_news"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="127dp"
        android:layout_marginLeft="127dp"
        android:layout_marginTop="23dp"
        android:gravity="left"
        android:text="@string/news_title_display"
        android:textColor="@android:color/black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/txt_news_author"
        android:layout_width="189dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/img_news"
        android:layout_alignLeft="@+id/img_news"
        android:layout_alignParentTop="true"
        android:layout_marginStart="6dp"
        android:gravity="left"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="125dp"
        android:text="@string/news_author_display"


        android:textColor="@android:color/black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/txt_news_date"
        android:layout_width="97dp"
        android:gravity="right"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txt_news_author"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="11dp"
        android:layout_marginRight="11dp"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        android:text="@string/news_date_display" />
</RelativeLayout>