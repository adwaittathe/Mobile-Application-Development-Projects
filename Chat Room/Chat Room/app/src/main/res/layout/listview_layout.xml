<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/msg_text"
        android:layout_width="355dp"
        android:layout_height="23dp"

        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="MsgText"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="msgText" />

    <ImageView
        android:id="@+id/msg_image"
        android:layout_width="247dp"
        android:layout_height="106dp"

        android:layout_marginTop="8dp"

        android:layout_marginEnd="12dp"
        app:layout_constraintEnd_toStartOf="@+id/msg_delete"
        app:layout_constraintTop_toBottomOf="@+id/msg_text"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/msg_firstName"
        android:layout_width="129dp"
        android:layout_height="wrap_content"

        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/msg_image" />

    <TextView
        android:id="@+id/msg_time"
        android:layout_width="133dp"
        android:layout_height="wrap_content"

        android:layout_marginTop="16dp"


        android:layout_marginEnd="28dp"
        android:text="TextView"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/msg_image" />

    <ImageView
        android:id="@+id/msg_delete"
        android:layout_width="50dp"
        android:layout_height="36dp"


        android:layout_marginEnd="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/msg_text"
        app:srcCompat="@android:drawable/ic_menu_delete" />
</android.support.constraint.ConstraintLayout>